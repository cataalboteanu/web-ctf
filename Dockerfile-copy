FROM bitnami/minideb:latest

WORKDIR /app
RUN apt-get update

# Node and NPM install
RUN install_packages gnupg wget curl sudo nodejs npm

COPY . .

# Mongo
RUN wget -qO - https://www.mongodb.org/static/pgp/server-5.0.asc | sudo apt-key add -
RUN echo "deb http://repo.mongodb.org/apt/debian buster/mongodb-org/5.0 main" | sudo tee /etc/apt/sources.list.d/mongodb-org-5.0.list
RUN apt-get update
RUN install_packages mongodb-org
RUN mkdir -p ./../data/db

EXPOSE 27017
#RUN sudo systemctl start mongod
#RUN mongod --dbpath ~/data/db
#RUN mongo localhost:27017/test  ./misc/mongo_create.js



#MySQL install




#init


RUN npm install
EXPOSE 3000
# RUN npm run serverstart 