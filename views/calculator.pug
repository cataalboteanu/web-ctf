extends layout

block content

  style.
    @import url("/stylesheets/rce/calculator.css");


  button.btn.btn-outline-dark(type="button", data-bs-toggle="modal", data-bs-target="#exampleModal").
      See description
  //- Help modal
  .modal.fade#exampleModal(tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true", data-bs-backdrop="static")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h3.modal-title#exampleModalLabel RCE
            //-button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
          .modal-body.fs-6.
            This site presents an Remote Code Execution vulnerability that can get you a reverse shell on the server.
            It uses a calculator that evaluates the mathematic operations an user sends.
            
          .modal-footer
            button.btn.btn-primary(type="button", data-bs-dismiss="modal") OK

  h2.text-white Online Calculator
  p#error.text-danger
  .main
    .display
        //- button.dark_mode_btn
        //-   i.fa.fa-moon(aria-hidden="true")
        p#history
          i.fa.fa-history(aria-hidden="true")
          |&nbsp;History
        h2#result
    .buttons
        button#clear C
        button#delete_single_num
          i.fa-solid.fa-delete-left(aria-hidden="true")
        button#Normal_btn /
        button#Normal_btn *
    .buttons
        button#Normal_btn 7
        button#Normal_btn 8
        button#Normal_btn 9
        button#Normal_btn -
    .buttons
        button#Normal_btn 4
        button#Normal_btn 5
        button#Normal_btn 6
        button#Normal_btn +
    .buttons
        button#Normal_btn 1
        button#Normal_btn 2
        button#Normal_btn 3
        button#Normal_btn .
    .buttons
        button#Normal_btn 0
        button#Normal_btn 00
        button#equalTo =

  p#error.text-danger 

  script(src="/javascript/calculator.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")


