extends layout

block content

  style.
    @import url("/stylesheets/xxe/userprofile.css");


  //- Help modal
  .modal.fade#exampleModal(tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true", data-bs-backdrop="static")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h3.modal-title#exampleModalLabel XXE
            //-button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
          .modal-body.fs-6.
            This site can help you upload your resume using an XML file.
            Try to retrieve local files by using an XML external entity (XXE) injection.
            The root folder of this app is /app.
            
          .modal-footer
            button.btn.btn-primary(type="button", data-bs-dismiss="modal") OK


  .container
    .row
      .col-12.p-0
        nav(aria-label="breadcrumb ")
          ol.breadcrumb.py-3.px-3
            li.breadcrumb-item
              a(href="/xxe") Home
            li.breadcrumb-item
              a(href="#", data-bs-toggle="modal", data-bs-target="#exampleModal") Help
            li.breadcrumb-item.active(aria-current="page") Data
      .col-md-5
        .row
          .col-12.bg-white.p-0.px-3.py-3.mb-3
            .d-flex.flex-column.align-items-center
              img.photo(src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg", alt)
              p.fw-bold.h4.mt-3 John Doe
              p.text-muted Full Stack Developer
              br
              .d-flex
                a(href="/xxe/edit")
                  .btn.btn-outline-primary.message Edit profile
          .col-12.bg-white.p-0.px-2.pb-3.mb-3
            .d-flex.justify-content-between.border-bottom.py-2.px-3
              p
                span.fas.fa-globe.me-2
                | Website
              a(href="#") https://example.com
            .d-flex.justify-content-between.border-bottom.py-2.px-3
              p
                span.fab.fa-github-alt.me-2
                | Github
              a(href) example
            .d-flex.justify-content-between.border-bottom.py-2.px-3
              p
                span.fab.fa-twitter.me-2
                | Twitter
              a(href) @example
            .d-flex.justify-content-between.border-bottom.py-2.px-3
              p
                span.fab.fa-instagram.me-2
                | Instagram
              a(href) example
            .d-flex.justify-content-between.py-2.px-3
              p
                span.fab.fa-facebook-f.me-2
                | Facebook
              a(href) example
      .col-md-7.ps-md-4
        .row
          .col-12.bg-white.px-3.mb-3.pb-3
            .d-flex.align-items-center.justify-content-between.border-bottom
                p.py-2 First Name
                p.py-2.text-muted #{profile[0]} 
            .d-flex.align-items-center.justify-content-between.border-bottom
                p.py-2 Last Name
                p.py-2.text-muted #{profile[1]}
            .d-flex.align-items-center.justify-content-between.border-bottom
                p.py-2 Email
                p.py-2.text-muted #{profile[4]}
            .d-flex.align-items-center.justify-content-between.border-bottom
                p.py-2 Phone
                p.py-2.text-muted #{profile[2]}
            
            .d-flex.align-items-center.justify-content-between
                p.py-2 Address
                p.py-2.text-muted #{profile[3]}, #{profile[5]}, #{profile[6]}
            .col-12.bg-white.px-3.pb-2
            h6.d-flex.align-items-center.mb-3.fw-bold.py-3
                i.text-info.me-2 assignment
                | Project Status
            small Web Design
            .progress.mb-3(style="height: 5px")
                .progress-bar.bg-primary(role="progressbar", style="width: 60%", aria-valuenow="72", aria-valuemin="0", aria-valuemax="100")
            small One Page
            .progress.mb-3(style="height: 5px")
                .progress-bar.bg-primary(role="progressbar", style="width: 72%", aria-valuenow="72", aria-valuemin="0", aria-valuemax="100")
            small Mobile Template
            .progress.mb-3(style="height: 5px")
                .progress-bar.bg-primary(role="progressbar", style="width: 50%", aria-valuenow="72", aria-valuemin="0", aria-valuemax="100")
            small Backend API
            .progress.mb-3(style="height: 5px")
                .progress-bar.bg-primary(role="progressbar", style="width: 90%", aria-valuenow="72", aria-valuemin="0", aria-valuemax="100")
            small Website Markup
            .progress.mb-3(style="height: 5px")
                .progress-bar.bg-primary(role="progressbar", style="width: 80%", aria-valuenow="72", aria-valuemin="0", aria-valuemax="100")

        
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
  
